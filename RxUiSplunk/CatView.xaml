<local:CatViewBase x:Class="RxUiSplunk.CatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RxUiSplunk"
             xmlns:reactiveUi="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0 0 5 0">Name:</TextBlock>
            <TextBlock x:Name="Name">Some Cat Name</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0 0 5 0">Lives left:</TextBlock>
            <TextBlock x:Name="LivesLeft">Not enough</TextBlock>
        </StackPanel>
        <Line
            Margin="4"
            Stretch="Fill"
            Stroke="DarkOrange"
            X1="0" X2="1" 
        />
    </StackPanel>
</local:CatViewBase>

